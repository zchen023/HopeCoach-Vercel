{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],                 // you don't need "DOM" for server code
    "module": "ES2022",
    "moduleResolution": "nodenext",    // <-- change from "Bundler"
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["node"]                  // <-- add Node types
  },
  "include": ["./**/*.ts"]
}



